<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/shopCategory"
            style="@style/ShopCategoryTextView"
            android:layout_gravity="bottom"
            android:layout_marginBottom="@dimen/default_extra_small_margin_4"
            android:layout_marginStart="@dimen/default_margin_16"
            tools:text="Shop Category" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/default_small_margin_8">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginEnd="@dimen/default_big_margin_24"
                android:layout_marginTop="@dimen/default_big_margin_24"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/openHoursDay"
                    style="@style/ShopDetailHoursTextView"
                    android:textColor="@color/dark_grey"
                    tools:ignore="MissingPrefix"
                    tools:text="Opening Days" />

                <TextView
                    android:id="@+id/openHourTime"
                    style="@style/ShopDetailHoursTextView"
                    android:layout_marginTop="0dp"
                    android:textSize="17sp"
                    tools:ignore="MissingPrefix"
                    tools:text="Opening Hours" />

            </LinearLayout>
        </FrameLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:id="@+id/phone"
            style="@style/ShopDetailActionTextView"
            android:drawableStart="@drawable/ic_phone"
            tools:text="056 402 07 71" />

        <View style="@style/ItemSeparator" />

        <TextView
            android:id="@+id/website"
            style="@style/ShopDetailActionTextView"
            android:drawableStart="@drawable/ic_web"
            tools:text="www.website.com" />

    </LinearLayout>

    <TextView
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/default_margin_16"
        android:textSize="16sp"
        tools:text="text" />

</LinearLayout>